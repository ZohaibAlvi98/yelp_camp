<%- include('partials/header') %> 

<div class="container">
  <div class="row">
    <div style="width: 30%; margin: 0 auto;">
        <h1 style="text-align: center;">Add New comment to <%= campground.name %></h1>

        <form style="margin: 25px auto;" method="post" action="/campgrounds/<%=campground._id%>/comments">
          <div class="form-group">
              <input type="text" class="form-control" name="comment[text]" placeholder="comments">
          </div>
          <div class="form-group">
              <button class="btn btn-lg btn-primary btn-default btn-block">Submit! </button>
         </div>
          <a href="/campgrounds">GO Back</a>
        </form>
    </div>
  </div>


</div>

<%- include('partials/footer') %>