<%- include('partials/header') %> 

<div class="container">
  <div class="row">
    <div style="width: 30%; margin: 0 auto;">
        <h1>Create a campground</h1>

        <form style="margin: 25px auto;" method="post" action="/campgrounds">
          <div class="form-group">
              <input type="text" class="form-control" name="name" placeholder="campground name">
          </div>
          <div class="form-group">
              <input type="number" class="form-control" name="price" placeholder="Price" min="1" step="1">
         </div>
          <div class="form-group">
              <input type="text" class="form-control" name="image" placeholder="image url">
         </div>
         <div class="form-group">
          <input type="text" class="form-control" name="desc" placeholder="description">
       </div>
          <div class="form-group">
              <button class="btn btn-lg btn-primary btn-default btn-block">Submit! </button>
         </div>
          <a href="/campgrounds">GO Back</a>
        </form>
    </div>
  </div>


</div>

<%- include('partials/footer') %>