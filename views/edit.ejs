<%- include('partials/header') %> 

<div class="container">
  <div class="row">
    <div style="width: 30%; margin: 0 auto;">
        <h1>Edit <%= campground.name %></h1>

        <form style="margin: 25px auto;" method="post" action="/campgrounds/<%= campground._id %>?_method=Put">
          <div class="form-group">
              <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
          </div>
          <div class="form-group">
              <input type="text" class="form-control" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
         </div>
          <div class="form-group">
              <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
         </div>
         <div class="form-group">
          <input type="text" class="form-control" name="campground[desc]" value="<%= campground.desc %>">
       </div>
          <div class="form-group">
              <button class="btn btn-lg btn-primary btn-default btn-block">Submit! </button>
         </div>
          <a href="/campgrounds">GO Back</a>
        </form>
    </div>
  </div>


</div>

<%- include('partials/footer') %>